@model TiendaCampesinos.ViewModels.ListCompraViewModel

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tienda de Campesinos | Historial de Compras</title>
    <link rel="stylesheet" href="~/css/ListProductos.css">
</head>
<body>
    <div id="HomeWrapper">
        <header>
            <ul>
                <li>
                    <a asp-controller="CerrarSesion" asp-action="CerrarSesion">
                        Cerrar Sesión
                    </a>
                </li> 
                <li>
                    <a asp-controller="ActualizarUsuario" asp-action="ActualizarInfo">
                        Modificar Datos
                    </a>
                </li>
                <li>
                    <a asp-controller="MostrarProductos" asp-action="ListaProductos">
                        Ver Productos
                    </a>
                </li>
                <li>
                    <a asp-controller="MostrarCarrito" asp-action="ListaCarrito">
                        Carrito Compras
                    </a>
                </li>                
            </ul>
        </header>
    </div>
    <div id="lista">
    <table>
        <thead>
            <tr>
                <th>Nombre del producto</th>
                <th>Imagen del producto</th>
                <th>Cantidad del producto</th>
                <th>Precio por Unidad</th>
                <th>Fecha de Compra</th>
                <th>Método de Pago</th>
            </tr>
        </thead>
        <tbody>
            <ul>
                @foreach (var item in Model.CompraProducto)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Item2.NombreProducto)</td>
                        <td><img src="@Html.DisplayFor(modelItem => item.Item2.Imagen)" alt="Imagen Producto" width="100" height="100" /></td>
                        <td>@Html.DisplayFor(modelItem => item.Item1.Cantidad)</td>
                        <td>$@Html.DisplayFor(modelItem => item.Item1.Precio)</td>
                        <td>@Html.DisplayFor(modelItem => item.Item1.Fecha)</td>
                        <td>@Html.DisplayFor(modelItem => item.Item1.MetodoPago)</td>
                    </tr>
                }
            </ul>
        </tbody>
    </table>
    </div>
</body>
</html>
